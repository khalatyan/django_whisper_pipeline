DJANGO_SECRET_KEY=your_secret_key
DEBUG=True
DATABASE_URL=postgres://user:pass@db:5432/dbname

YA_DISK_TOKEN=ya_access_token_if_any
YA_DISK_FOLDER=/remote/folder/path/on/yadisk

NETWORK_PATH=//nas/share/folder   # или /mnt/audio
WHISPER_CMD=/opt/whisper/run_whisper.sh --model small --output_format srt "{input}" "{output}"
